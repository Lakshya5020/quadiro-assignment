<!DOCTYPE html>
<html>

<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<style>
    a {
        margin: 20px;
    }

    table {
        width: 80%;
        border-collapse: collapse;
        margin: 10px;
    }

    table,
    th,
    td {
        border: 1px solid black;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #d0cbcb;
    }

    .show {
        text-align: center;
    }
</style>

<body>
    <h1>Admin Dashboard</h1>
    <p>Total Cars: <%= totalCars %>
    </p>
    <a href="/admin/dashboard/new">Add New Car</a>
    <a href="/admin/logout">Logout</a>
    <table>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Price</th>
            <th>Show Details</th>
        </tr>
        <%for(let car of cars ) { %>
            <tr>
                <td>
                    <%= car.name %>
                </td>
                <td>
                    <%= car.year %>
                </td>
                <td>
                    <%= car.price %>
                </td>
                <td class="show">
                    <a href="/admin/dashboard/<%= car._id %>">Show</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>